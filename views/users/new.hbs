{{#if errors}}
    <div class="alert alert-danger">There are errors in the fields</div>
{{/if}}

<form action="/users" method="POST">
<li>
    <label for="name">Name:</label>
    <input class='form-control {{#if errors.name}} is-invalid {{/if}}' value='{{user.name}}' type="text" name="name" id="name">
    {{#if errors.name}}
        <div class="invalid-feedback">
            {{errors.name.message}}
        </div>
    {{/if}}
</li>

<li>
    <label for="email">Email:</label>
    <input class='form-control {{#if errors.email}} is-invalid {{/if}}' value='{{user.email}}' type="email" name="email" id="email">
    {{#if errors.email}}
        <div class="invalid-feedback">{{errors.email.message}}</div>
    {{/if}}
</li>

<li>
    <label for="password">Password</label>
    <input class='form-control {{#if errors.password}} is-invalid {{/if}}' value='{{user.password}}' type="password" name="password" id="password">
    {{#if errors.password}}
        <div class="invalid-feedback">{{errors.password.message}}</div>
    {{/if}}
</li>

<li><button type="submit">Click me baby</button></li>
</form>