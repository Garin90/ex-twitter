<h1>I'm a list</h1>

<a href="/tweets/new"><button>Create a new tweet</button></a>

{{#each tweets as |tweet|}}
    <li><a href="/tweets/{{tweet.id}}">{{tweet.user}}</a></li>
    <li>{{tweet.message}}</li>
    <li>{{#if tweet.updatedAt}} 
            {{ date tweet.updatedAt }}
        {{ else }} 
            {{ date tweet.createdAt }}
        {{/if}}</li>
    <li>{{tweet.fav}}</li>
{{/each}}